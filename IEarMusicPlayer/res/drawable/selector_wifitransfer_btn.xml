<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3b70a3"
                android:centerColor="#3b70a3"   
                android:endColor="#3b70a3"
                android:angle="270" />
            <size android:width="70dp" android:height="60dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3b70a3"
                android:centerColor="#3b70a3"   
                android:endColor="#3b70a3"
                android:angle="270" />
            <size android:width="70dp" android:height="50dp"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
           <solid android:color="@color/half_transparent"/>
            <size android:width="70dp" android:height="60dp"/>
        </shape>
    </item>

</selector>
