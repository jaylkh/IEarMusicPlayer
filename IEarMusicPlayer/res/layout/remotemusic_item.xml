<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:src="@drawable/icon_local_music" />

    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="fill_parent"
        android:layout_height="18dip"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_toRightOf="@id/imageView1"
        android:layout_alignTop="@id/imageView1"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/playstate_iv"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginBottom="-4dip"
            android:background="@drawable/list_pause_state" />

        <TextView
            android:id="@+id/musicname_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/white"
            android:text="musicname"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title_ll"
        android:layout_below="@id/title_ll"
        android:layout_alignBottom="@id/imageView1"
         android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/artist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_weight="1"
            android:text="artist"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:textColor="@color/white"
            android:text="duration"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>